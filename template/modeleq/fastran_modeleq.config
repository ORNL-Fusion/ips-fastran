# ======================================================================
# TEMPLATE FOR FASTRAN MODEL EQUILIBRIUM

# ======================================================================
# SIMULATION INFO SECTION
# ======================================================================

USER = parkjm

RUN_ID = modeleq
TOKAMAK_ID = d3d
SHOT_NUMBER = 223002
TIME_ID = 00001

SIM_NAME = ${RUN_ID}_${SHOT_NUMBER}

OUTPUT_PREFIX = 
LOG_FILE = ${RUN_ID}.log
LOG_LEVEL = DEBUG

SIM_ROOT = ${PWD}/${SHOT_NUMBER}.${TIME_ID}
INPUT_DIR_SIM = ${PWD}/../input

RUN_COMMENT = d3d model equilibrium
TAG = 

SIMULATION_MODE = NORMAL

# ======================================================================
# PLASMA STATE SECTION
# ======================================================================

PLASMA_STATE_WORK_DIR = $SIM_ROOT/work/plasma_state

CURRENT_STATE = s${SHOT_NUMBER}.$TIME_ID
CURRENT_EQDSK = g${SHOT_NUMBER}.$TIME_ID
CURRENT_INSTATE = i${SHOT_NUMBER}.$TIME_ID
CURRENT_FASTRAN = f${SHOT_NUMBER}.$TIME_ID
CURRENT_BC = b${SHOT_NUMBER}.$TIME_ID

PLASMA_STATE_FILES = $CURRENT_STATE $CURRENT_EQDSK $CURRENT_INSTATE $CURRENT_FASTRAN $CURRENT_BC 

# ======================================================================
# PORTS SECTION
# ======================================================================

[PORTS]

    NAMES = INIT DRIVER EQ TR CONSTRAINT 

    [[DRIVER]]
        IMPLEMENTATION = modeleq_driver

    [[INIT]]
        IMPLEMENTATION = modeleq_init
      
    [[TR]]
        IMPLEMENTATION = modeleq_fastran

    [[EQ]]
        IMPLEMENTATION = efit

    [[CONSTRAINT]]
        IMPLEMENTATION = modeleq_constraint

    [[MONITOR]]
        IMPLEMENTATION = monitor


# ======================================================================
# COMPONENT CONFIGURATION SECTION
# ======================================================================

[modeleq_init]
    CLASS = fastran
    SUB_CLASS = 
    NAME = modeleq_init
    NPROC = 1
        INPUT_DIR = $INPUT_DIR_SIM
        INSTATE = instate
        INPUT_FILES = $INSTATE
        INPUT_ID = 
        OUTPUT_FILES = 
        RESTART_FILES = 
    SCRIPT = $FASTRAN_ROOT/src/modeleq_init.py

[modeleq_driver]
    CLASS = fastran
    SUB_CLASS = 
    NAME = modeleq_driver
    NPROC = 1
        INPUT_DIR = $INPUT_DIR_SIM
        INPUT_FILES = 
        OUTPUT_FILES = 
        RESTART_FILES = 
    SCRIPT = $FASTRAN_ROOT/src/modeleq_driver.py

[efit]
    CLASS = fastran
    SUB_CLASS = 
    NAME = efit
    NPROC = 1 
    NITER = 10 
    BIN_PATH = $EFIT_BIN_DIR
    BIN = $EFIT_BIN_NAME 129 129
        INPUT_DIR = $INPUT_DIR_SIM
        INPUT_FILES = 
#       OUTPUT_FILES = g*.* a*.* m*.* k*.* efit.log
        OUTPUT_FILES = 
        RESTART_FILES = 
    SCRIPT = $FASTRAN_ROOT/src/efit.py
    PS_BACKEND = INSTATE
#
    INIT_RUN = 0
    INIT_RUN_STEP = 1
#   R0_scale = 1.7
#   B0_scale = 2.0

[modeleq_fastran]
    CLASS = fastran
    SUB_CLASS = 
    NAME = fastran
    NPROC = 1
    NPROC_KY = 1
    BIN_PATH = $FASTRAN_BIN_DIR
    BIN = $FASTRAN_SERIAL_BIN_NAME
        INPUT_DIR = $INPUT_DIR_SIM
        INFASTRAN = infastran
        INPUT_FILES = $INFASTRAN intglf
#       OUTPUT_FILES = fastran.nc inprof inmetric infastran intglf xfastran.log
        OUTPUT_FILES = 
        RESTART_FILES = 
    SCRIPT = $FASTRAN_ROOT/src/fastran.py
    PS_BACKEND = instate

[modeleq_constraint]
    CLASS = fastran
    SUB_CLASS = 
    NAME = modeleq_constraint
    NPROC = 1
    BIN_PATH =
    BIN = 
        INPUT_DIR = $INPUT_DIR_SIM
        INFASTRAN = 
        INPUT_FILES = 
        OUTPUT_FILES = 
        RESTART_FILES = 
    SCRIPT = $FASTRAN_ROOT/src/modeleq_constraint.py

[monitor]
    CLASS = monitor
    SUB_CLASS =
    NAME = monitor
    NPROC = 1
    BIN_PATH = 
    BIN = 
        INPUT_DIR = 
        INPUT_FILES = 
        OUTPUT_FILES = 
        RESTART_FILES = 
    SCRIPT = $FASTRAN_ROOT/src/monitor.py

# =============================================================================
# ITERATION SECTION
# =============================================================================

[ITERATION_LOOP]
    MODE = REGULAR
    NSTEP = 10

